{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "target": "esnext",
    "module": "es6",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": ["./src/**/*"]
}
